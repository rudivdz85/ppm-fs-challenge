{
  "name": "server",
  "version": "1.0.0",
  "description": "Express TypeScript server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:reset": "ts-node src/database/migrate.ts reset",
    "migrate:status": "ts-node src/database/migrate.ts status",
    "seed": "ts-node src/database/seeds/dev-seed.ts",
    "seed:status": "ts-node src/database/seeds/dev-seed.ts status",
    "db:reset": "npm run migrate:reset && npm run seed"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "morgan": "^1.10.0",
    "@ppm/types": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1",
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/pg": "^8.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16",
    "@jest/globals": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "express",
    "typescript",
    "server"
  ],
  "author": "",
  "license": "ISC"
}